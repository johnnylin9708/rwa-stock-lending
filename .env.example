# ===== Core App =====
# MongoDB connection string (e.g. mongodb+srv://USER:PASS@CLUSTER/dbname)
MONGODB_URI=

# Public Self Protocol app settings (shown in client)
# Example: NEXT_PUBLIC_SELF_APP_NAME="RWA Self"
NEXT_PUBLIC_SELF_APP_NAME=
# Example: NEXT_PUBLIC_SELF_SCOPE="rwa-scope"
NEXT_PUBLIC_SELF_SCOPE=
# Example: NEXT_PUBLIC_SELF_ENDPOINT="https://staging.self.xyz"
NEXT_PUBLIC_SELF_ENDPOINT=

# ===== Network / RPC =====
# EVM JSON-RPC URL (e.g. https://sepolia.infura.io/v3/YOUR_KEY)
ETHEREUM_RPC_URL=

# ===== ERC-3643 / OnchainID / T-REX =====
# Deployed contract addresses and keys
# Identity factory that maps user address -> identity
IDENTITY_FACTORY_ADDRESS=
# Implementation authority for IdentityProxy
IDENTITY_IMPLEMENTATION_AUTHORITY=
# IdentityRegistry used by the T-REX token
IDENTITY_REGISTRY=
# T-REX token address (the token being minted/verified)
TOKEN_ADDRESS=
# Private key of TokenAgent (has permission to add keys/claims)
TOKEN_AGENT_PRIVATE_KEY=
# Trusted issuer contract address (must be in TrustedIssuersRegistry)
CLAIM_ISSUER_CONTRACT=
# Private key for claim issuer signing (server-side secret)
CLAIM_ISSUER_SIGNING_KEY=
# KYC claim topic (numeric as string, e.g. "7")
KYC_CLAIM_TOPIC=
# Optional registries used for validation/diagnostics
# CLAIM_TOPICS_REGISTRY=
# TRUSTED_ISSUERS_REGISTRY=

# ===== Compound / Comet (UI) =====
# Public addresses for frontend (read-only)
# Example: NEXT_PUBLIC_COMET_ADDRESS=0x...
NEXT_PUBLIC_COMET_ADDRESS=
# Example: NEXT_PUBLIC_USDC_ADDRESS=0x...
NEXT_PUBLIC_USDC_ADDRESS=

# ===== Alpaca (Broker + Market Data) =====
